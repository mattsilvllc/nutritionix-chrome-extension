{
    "manifest_version": 2,

    "name": "Nutritionix",
    "description": "Calculate the calories of food or recipes",
    "version": "1.0",

    "author": "Nutritionix",

    "browser_action": {
        "default_icon": "img/icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "activeTab",
        "contextMenus",
        "https://www.nutritionix.com/"
    ],
    "icons": {
        "16": "img/icon-16.png",
        "48": "img/icon-48.png",
        "128": "img/icon-128.png"
    },
    "background": {
        "scripts": ["js/script.js"]
    }
}
